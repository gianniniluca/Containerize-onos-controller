#!/bin/bash
# -----------------------------------------------------------------------------
# Publishes ONOS artifacts to a Maven repository (local or remote)
# -----------------------------------------------------------------------------

options=""
while getopts lh? o; do
    case "$o" in
        l) options="$options -l";;
        *) echo "usage: $(basename $0) [-l] [repoURL]" >&2; exit 1;;
    esac
done
let OPC=$OPTIND-1
shift $OPC

REPO_URL=$1
CATALOG=/tmp/onos.$$.catalog

$(dirname "$0")/onos-publish-catalog $options $CATALOG && $(dirname "$0")/onos-upload-artifacts.py $CATALOG $REPO_URL
